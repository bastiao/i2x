<div class="row">
  <div class="small-12 medium-12 large-12 columns"><h4 class="subheader"><%= link_to agent.title, agent %></h4></div>
  <div class="small-12 medium-8 large-8 columns left">
    <span class="label secondary radius icon-update">Last check <%= time_ago_in_words(agent.last_check_at) %> ago</span>
    <span class="label secondary radius icon-publisher"><%= agent.publisher %></span>
    <span class="label secondary radius icon-schedule"><%= agent.schedule %></span>
    <%= (agent.seeds.size != 0) ? "<span class=\"label radius icon-seed\">#{pluralize(agent.seeds.size, 'seed')}</span>".html_safe : '' %>
  </div>
  <div class="small-12 medium-4 large-4 columns right">
    <a class="remove right remove_agent_integration has-tip" data-id="<%= agent.id %>" data-tooltip title="Detach <%= agent.identifier %>">Remove agent </a>
  </div>
</div>